= form_for @room do |f|
  - if @room.errors.any?
    #error_explanation
      %h2= "#{pluralize(@room.errors.count, "error")} prohibited this room from being saved:"
      %ul
        - @room.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :floor
    = f.number_field :floor
  .field
    = f.label :room_number
    = f.number_field :room_number
  .field
    = f.label :department_id
    = f.text_field :department_id
  .field
    = f.label :building_id
    = f.text_field :building_id
  .actions
    = f.submit 'Save'
