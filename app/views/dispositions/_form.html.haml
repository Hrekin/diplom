= form_for @disposition do |f|
  - if @disposition.errors.any?
    #error_explanation
      %h2= "#{pluralize(@disposition.errors.count, "error")} prohibited this disposition from being saved:"
      %ul
        - @disposition.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
